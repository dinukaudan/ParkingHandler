<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdd"
    tools:context="com.example.tharindu_prasad.parkinghandler.user_data">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="                 Slot Availability"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView2" />


        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="wrap_content"
            android:layout_height="643dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="504dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:paddingBottom="@dimen/activity_horizontal_margin"

                    android:text="  Enter user_id"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/slot_id"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="number" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b1"

                    android:text="ok"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="479dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="614dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView5"

                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginTop="10dp"

                        android:paddingBottom="@dimen/activity_horizontal_margin"

                        android:text="Booked or not"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/availability"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:text="not occupied"
                        android:textColor="@color/c4" />


                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"

                        android:text="Time Begin : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_begin"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:text="00"
                        android:textColor="@color/c4" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"

                        android:text="Time Duration :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_dura"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:text="00"
                        android:textColor="@color/c4" />
                    <TextView
                        android:id="@+id/textViewa"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"

                        android:text="location id:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/loc_id"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textAlignment="center"
                        android:text="00"
                        android:textColor="@color/c4" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</ScrollView>



</android.support.constraint.ConstraintLayout>
