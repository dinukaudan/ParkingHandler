<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdd"
    tools:context="com.example.tharindu_prasad.parkinghandler.BlankFragment8">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Payment At Park"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/textView4"
            android:textColor="@color/c4"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enter the slot number" />

        <EditText
            android:id="@+id/slot_id"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/c4"
            android:textColorHighlight="@color/c1"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/but1"
            android:layout_width="192dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/b1"
            android:text="Click to see payment and send the confirmation email"
            android:textAlignment="center"
            android:textColor="@color/c4"
            android:textColorHighlight="@color/c1"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <TextView



                android:layout_width="191dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"


                android:textColorHighlight="@color/c1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="payment amount : Rs " />

            <TextView
                android:id="@+id/pmt"
                android:layout_width="191dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="  00.00"

                android:textColorHighlight="@color/c6"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/bn10"
            android:layout_width="313dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Click toSet slot free"
            android:background="@drawable/b1"
            />

        <Button
            android:id="@+id/bn2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="8dp"
            android:background="@drawable/b1"
            android:layout_marginLeft="150dp"
            android:text="Go to home" />
    </LinearLayout>


</RelativeLayout>
