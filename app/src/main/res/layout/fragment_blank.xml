<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bgdd"
    tools:context="com.example.tharindu_prasad.parkinghandler.BlankFragment">


    <TextView
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handler profile data"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageView
android:backgroundTintMode="multiply"

        android:id="@+id/prof_pic"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:background="@color/black"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof_pic"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/prof_pic"
        android:layout_toStartOf="@+id/prof_pic"
        android:text="       Name"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:textColor="@color/c4"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_centerVertical="true"
        android:text="      Email"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_centerVertical="true"
        android:textColor="@color/c4"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="35dp"
        android:text="     Mobile Number"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textColor="@color/c4"
        android:textSize="50px"
        android:textStyle="bold" /> />

    <Button
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home page"
        android:background="@drawable/b1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prof_pic"
        android:layout_toEndOf="@+id/prof_pic"
        android:layout_marginBottom="80dp" />

    <Button
        android:id="@+id/but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home page"
        android:background="@drawable/b1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prof_pic"
        android:layout_toEndOf="@+id/prof_pic"
        android:layout_marginBottom="80dp" />

    <Button
        android:id="@+id/but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home page"
        android:background="@drawable/b1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prof_pic"
        android:layout_toEndOf="@+id/prof_pic"
        android:layout_marginBottom="80dp" />



   

</RelativeLayout>
