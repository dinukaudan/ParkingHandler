<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bgdd"
    tools:context="com.example.tharindu_prasad.parkinghandler.BlankFragment6">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:text="  Slot Availability and Allow Slot"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="454dp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="266dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Check the Slot list"
                    android:textAlignment="center"
                    android:textColor="@color/c5"
                    android:textIsSelectable="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="188dp"
                        android:layout_height="36dp"
                        android:text="    Location id of parkind :" />


                    <EditText
                        android:layout_width="100dp"

                        android:layout_height="60dp"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />
                </LinearLayout>


                <Button
                    android:id="@+id/but1"
                    android:layout_width="129dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/b1"
                    android:text="see the full slot list" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/c5" />

            </LinearLayout>

            <TextView
                android:id="@+id/textV"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="30dp"
                android:text="Allow Slots"
                android:textAlignment="center"
                android:textColor="@color/c5"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="187dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_marginEnd="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="13dp"
                    android:layout_toLeftOf="@+id/name"
                    android:layout_toStartOf="@+id/name"
                    android:background="@drawable/b1"
                    android:text="see user data" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/button4"
                    android:layout_alignStart="@+id/button4"
                    android:layout_below="@+id/button4"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/b1"
                    android:text="book the slot" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textVie"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@drawable/bg"
            android:backgroundTint="@color/c5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:text="See slot data"
            android:textAlignment="center"
            android:textColor="@color/c5"
            android:textColorHighlight="@color/c5"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="848dp"

            >

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:paddingBottom="@dimen/activity_horizontal_margin"

                    android:text="  Enter slot number"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/slot_id"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="number" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b1"

                    android:text="ok"
                    android:textSize="10dp" />


                <Button
                    android:id="@+id/but2"
                    android:layout_width="132dp"
                    android:layout_height="66dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginVertical="300dp"
                    android:layout_marginTop="20dp"

                    android:layout_toEndOf="@+id/prof_pic"
                    android:layout_toRightOf="@+id/prof_pic"
                    android:background="@drawable/b1"
                    android:text="Back to home page" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="479dp"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="526dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView5"

                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginTop="10dp"

                        android:paddingBottom="@dimen/activity_horizontal_margin"

                        android:text="  Availability : "
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/availability"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="not occupied"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />


                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"

                        android:text="Time Begin : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_begin"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"

                        android:text="Time Duration :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time_dura"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"

                        android:text="Reserved User's id :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vno"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="192dp"
                        android:layout_height="46dp"

                        android:text="Reservation id"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rid"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/c4" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        </LinearLayout>



</ScrollView>
