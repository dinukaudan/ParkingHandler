<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdd"
    tools:context="com.example.tharindu_prasad.parkinghandler.BlankFragment7">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0.15"


            android:text="Extend timer and Maker"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter slot id:" />

            <EditText
                android:id="@+id/id"
                android:layout_width="84dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="number of hours after extend :" />

            <EditText
                android:id="@+id/name"
                android:layout_width="84dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="477dp"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="266dp"
                android:layout_height="3dp"
                android:layout_marginTop="50dp"
                android:textAlignment="gravity"
                android:layout_weight="1"
                android:text="new end time :" />

            <TimePicker
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/b1"
            android:text="Submit to extend" />

        <Button
            android:id="@+id/bn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.15"
            android:background="@drawable/b1"
            android:text="update reservation" />




        <Button
            android:id="@+id/bn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.15"
            android:background="@drawable/b1"
            android:text="cancel booking and confirm parkings" />




    </LinearLayout>
</ScrollView>
